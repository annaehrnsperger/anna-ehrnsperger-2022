{% from "components/partials/media.njk" import media with context %}


<section class="relative" data-fp-intro-container>

  <div class="bg-black min-h-[130vh] w-full text-2xl text-white tracking-tighter leading-none absolute z-[1]" data-fp-intro>
    {% include "components/partials/introtext.njk" %}
  </div>

  <div class="min-h-[130vh] w-full text-2xl text-black tracking-tighter leading-none absolute inset-0 z-[-1]">
    {% include "components/partials/introtext.njk" %}
  </div>

</section>


<section data-fp-content>

  {% for project in work.projects | reverse %}
    <a href="/work/{{ project.slug.current }}" class="grid grid-cols-12 gap-4 px-8 pb-48 {% if loop.first %}pt-48{% endif %}" data-transition="project">
      <div class="col-start-2 col-span-11">
        <h3 class="translate-y-1">{{ project.type }}</h3>
        <h4 class="text-lg">{{ project.title }}</h4>
      </div>
      
      <figure class="h-[33vw] w-[33vw] bg-black -translate-y-2" data-preview-project>
        {{ media(project.media.type, project.media.image, project.media.alt, project.media.video) }}
      </figure>
    </a>
  {% endfor %}

</section>


