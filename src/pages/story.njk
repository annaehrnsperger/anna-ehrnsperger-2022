---
pagination:
  data: posts
  size: 1
  alias: post
  addAllPagesToCollections: true
tags: posts
eleventyComputed:
  pageTitle: "{{ post.title }}"
template: story
permalink: "stories/{{ post.slug | slug }}/index.html"
---

{% from "partials/media.njk" import media with context %}


<article class="bg-white text-black">
  <section class="grid-layout p-4 md:p-8 md:pb-32">
    <h1 class="hl col-start-2 col-span-11">{{ post.title }}</h1>

    <figure class="story-media col-span-1 square bg-black" data-story-media>
      {{ media(post.media.type, post.media.image, post.media.alt, post.media.video) }}
    </figure>
  </section>

  {% for module in post.content %}
    {% include "modules/modules.njk" %}
  {% endfor %}
</article>