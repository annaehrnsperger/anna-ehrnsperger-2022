---
pagination:
  data: projects
  size: 1
  alias: project
  addAllPagesToCollections: true
tags: projects
eleventyComputed:
  pageTitle: "{{ project.title }}"
template: project
permalink: "work/{{ project.slug | slug }}/index.html"
---

{% from "partials/media.njk" import media with context %}
{% from "partials/projectintro.njk" import projectintro with context %}
{% from "modules/headline.njk" import headline with context %}
{% from "modules/textblock.njk" import textblock with context %}



<section class="relative h-[90vh]">
  <a class="h-[90vh] w-full absolute inset-0 group" href="{{ project.url }}" target="_blank" rel="noopener noreferrer" aria-label="visit website" data-visit-website></a>

  <div class="h-[130vh] w-full hl text-white bg-black absolute z-[-1]" data-intro>
    {{ projectintro(false) }}
  </div>

  <div class="h-[130vh] w-full hl text-black bg-white absolute inset-0 z-[-2]">
    {{ projectintro(true) }}
  </div>
</section>


{{ headline(project.description) }}

<div class="h-16"></div>

{% for info in project.infos %}
  {{ textblock(info.title, info.content, true, false, true) }}
{% endfor %}

{% if project.grid === 'two' %}
  
  <section class="grid-layout p-4 md:p-8 pt-32 md:pt-96">
    <figure class="col-span-12 md:col-span-9 bg-black overflow-hidden" data-animation="fadein">
      {{ media(project.medias[0].type, project.medias[0].image, project.medias[0].alt, project.medias[0].video) }}
    </figure>
  </section>

  <section class="grid-layout p-4 md:p-8 pt-0 md:pt-0">
    <figure class="col-span-10 md:col-span-5 bg-black overflow-hidden" data-animation="fadein">
      {{ media(project.medias[1].type, project.medias[1].image, project.medias[1].alt, project.medias[1].video) }}
    </figure>
  </section>

  {{ textblock("Tech Stack", project.tech.content, true) }}

{% endif %}


{% if project.grid === 'threesmall' %}

  <section class="grid-layout p-4 md:p-8 pt-32 md:pt-96">
    <figure class="col-span-12 md:col-span-6 bg-black overflow-hidden" data-animation="fadein">
      {{ media(project.medias[0].type, project.medias[0].image, project.medias[0].alt, project.medias[0].video) }}
    </figure>

    <figure class="mt-4 md:mt-0 col-span-12 md:col-start-7 md:col-span-6 bg-black overflow-hidden" data-animation="fadein">
      {{ media(project.medias[1].type, project.medias[1].image, project.medias[1].alt, project.medias[1].video) }}
    </figure>
  </section>

  <section class="grid-layout p-4 md:p-8 pt-0 md:pt-0">
    {{ textblock("Tech Stack", project.tech.content, true, true) }}

    <figure class="col-span-9 md:col-span-5 bg-black mt-4 md:mt-0 overflow-hidden" data-animation="fadein">
      {{ media(project.medias[2].type, project.medias[2].image, project.medias[2].alt, project.medias[2].video) }}
    </figure>
  </section>


{% endif %}


{% if project.grid === 'threelarge' %}

  <section class="grid-layout p-4 md:p-8 pt-32 md:pt-96">
    <figure class="col-span-12 bg-black overflow-hidden" data-animation="fadein">
      {{ media(project.medias[0].type, project.medias[0].image, project.medias[0].alt, project.medias[0].video) }}
    </figure>
  </section>

  <section class="grid-layout p-4 md:p-8 pt-0 md:pt-0">
    <figure class="col-span-7 md:col-start-1 md:col-span-4 bg-black overflow-hidden" data-animation="fadein">
      {{ media(project.medias[1].type, project.medias[1].image, project.medias[1].alt, project.medias[1].video) }}
    </figure>
  </section>

  <section class="grid-layout p-4 md:p-8 pt-0 md:pt-0">
    <figure class="col-span-12 md:col-span-8 bg-black overflow-hidden" data-animation="fadein">
      {{ media(project.medias[2].type, project.medias[2].image, project.medias[2].alt, project.medias[2].video) }}
    </figure>
  </section>


  {{ textblock("Tech Stack", project.tech.content, true) }}

{% endif %}


<div class="h-44 md:h-96"></div>