---
lang: en
---

<!DOCTYPE html>
<html lang="{{ lang }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
      {{ pageTitle }}{% if pageTitle %} â–ª {% endif %}{{ general.siteTitle }}
    </title>
    <meta name="title" content="{{ general.siteTitle  }}">
    <meta name="description" content="{{ general.description }}">
    {% if general.favicon %}      
      <link rel="icon" type="image/png" href="{{ general.favicon }}"/>
    {% else %}
      <link rel="icon" href="data:image"/>
    {% endif %}
    <link rel="preload" crossorigin as="font" type="font/woff2" href="/assets/fonts/SuisseIntl-Regular.woff2">
    <link rel="preload" crossorigin as="font" type="font/woff" href="/assets/fonts/SuisseIntl-Regular.woff">
    <link rel="preload" crossorigin as="font" type="font/woff2" href="/assets/fonts/SuisseIntl-Bold.woff2">
    <link rel="preload" crossorigin as="font" type="font/woff" href="/assets/fonts/SuisseIntl-Bold.woff">
    {% if general.previewImage %}      
      <meta property="og:image" content={{ general.previewImage }} />
      <meta name="twitter:image" content={{ general.previewImage }} />
    {% endif %}
    {% include "components/noscript.njk" %}
    <link rel="stylesheet" href="/index.css">
  </head>
  <body>
    <div data-router-wrapper>
      <div id="root" data-router-view="global" data-template="{{ template }}">
        {% include 'components/header.njk' %}

        <main data-router-wrapper>
          {{ content | safe }}
        </main>
        
        {% if template !== 'notfound' %}
          {% include 'components/footer.njk' %}
        {% endif %}
      </div>
    </div>

    <script type="module" src="/main.js"></script>
  </body>
</html>